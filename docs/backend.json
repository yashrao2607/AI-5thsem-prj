{
  "entities": {
    "User": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile photo."
        }
      },
      "required": ["uid", "email"]
    },
    "Report": {
      "title": "Report",
      "description": "An uploaded report.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the report file."
        },
        "text": {
          "type": "string",
          "description": "The extracted text content of the report."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the report was uploaded."
        },
        "imageUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL for a preview image of the report."
        }
      },
      "required": ["name", "text", "createdAt"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/reports/{reportId}": {
      "schema": {
        "$ref": "#/entities/Report"
      },
      "description": "Stores reports uploaded by a user."
    }
  }
}
